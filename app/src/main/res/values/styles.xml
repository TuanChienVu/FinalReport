<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppThemeActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkgreen</item>
        <item name="colorPrimaryDark">@color/darkgreen</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditTextRoundBold">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center|left</item>
        <item name="android:background">@drawable/shape_white_radius_textedit</item>
        <item name="android:padding">10.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40.0dip</item>
        <item name="android:layout_marginTop">5.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">5.0dip</item>
    </style>

    <style name="ButtonRadiusMaterialGreen">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_green_mtrl_radius</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40.0dip</item>
    </style>
    <style name="ButtonFlatTransparent">
        <item name="android:textColor">@color/darkgreen</item>
        <item name="android:background">@drawable/selector_transparent</item>
        <item name="android:layout_width">20.0dip</item>
        <item name="android:layout_height">20.0dip</item>
    </style>
    <style name="ButtonRadiusMaterialDarkGray">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:background">@drawable/selector_darkgray_mtrl_radius</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40.0dip</item>
    </style>
</resources>
