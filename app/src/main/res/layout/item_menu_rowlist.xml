<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/menu_selectedlist"
        android:layout_height="48dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/_0_row_imgIcon"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sổ giao dịch"

            android:id="@+id/_0_row_txtTenMenu"
            android:textColor="@drawable/menu_selectedtext"
            android:textSize="14sp"
            android:alpha="0.87"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="72dp" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="#e8e1e1"
            android:id="@+id/_0_row_frameDongke"
            android:visibility="gone"></FrameLayout>
    </RelativeLayout>
</RelativeLayout>