<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="#f5f5f5"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/frag2_card_row_padding_bottom"
    android:paddingLeft="@dimen/frag2_card_row_padding"
    android:paddingRight="@dimen/frag2_card_row_padding"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:background="#f5f5f5"
        app:cardBackgroundColor="#ffa726"
        android:id="@+id/frag2_cv"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

    <LinearLayout
        android:gravity="left"
        android:layout_gravity="left"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/frag1_loc_tv">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/frag2_card_day"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Day"
            android:textSize="@dimen/frag1_cond_txt_size"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/frag2_card_condition"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="condition"
            android:textSize="@dimen/frag2_card_row_condition" />
    </LinearLayout>

    <LinearLayout
        android:gravity="left"
        android:layout_gravity="left"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

    <LinearLayout
        android:gravity="left"
        android:layout_gravity="left"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:layout_width="0dp">

        <ImageView
            android:gravity="left"
            android:id="@+id/frag2_card_iv"
            android:layout_gravity="left"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:src="@drawable/img_12" />
    </LinearLayout>

    <LinearLayout
        android:gravity="left"
        android:layout_gravity="left"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:layout_width="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/frag2_card_temp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="temp"
            android:textSize="@dimen/frag1_loc_tv_size" />
    </LinearLayout>
</LinearLayout></LinearLayout></android.support.v7.widget.CardView></LinearLayout>
