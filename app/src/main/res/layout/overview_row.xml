<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="#e0f2f1"
    android:gravity="center"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/ov_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        app:cardBackgroundColor="#f5f5f5"
        app:cardElevation="2dp"
        android:layout_marginTop="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="8dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:gravity="left">

        <ImageView
            android:id="@+id/ov_iv"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center_vertical|left"
            android:gravity="left"
            android:src="@drawable/img_32" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:gravity="left"
        android:orientation="vertical"
        android:paddingLeft="@dimen/frag1_loc_tv">

        <TextView
            android:id="@+id/ov_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1.0"
            android:gravity="left"
            android:text="title"
            android:textColor="#757575" />

        <TextView
            android:id="@+id/ov_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Details"
            android:textColor="#757575"
            android:textSize="@dimen/frag1_cond_txt_size"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout></android.support.v7.widget.CardView></LinearLayout>
