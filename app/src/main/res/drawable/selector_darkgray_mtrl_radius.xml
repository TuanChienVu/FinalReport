<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:right="1dp" android:bottom="1dp">
                <shape>
                    <stroke android:width="0dp" android:color="@color/white" />
                    <solid android:color="@color/green" />
                    <corners android:radius="50dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:left="1dp" android:top="0dp" android:right="1dp">
                <shape>
                    <corners android:radius="50dp" />
                    <gradient android:startColor="#484848" android:endColor="#ececec" android:angle="270.0" android:type="linear" android:centerY="0.9" android:centerColor="#767676" />
                </shape>
            </item>
            <item android:right="0dp" android:bottom="0dp">
                <shape>
                    <solid android:color="@color/darkgreen" />
                    <corners android:radius="50dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
